# Development Environment Configuration

# Database Configuration
POSTGRES_DB=ai_language_platform_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgresql://postgres:dev_password_123@localhost:5432/ai_language_platform_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT & Security (Development keys - NOT for production)
JWT_SECRET_KEY=dev_jwt_secret_key_for_development_only_not_secure
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# AI Service API Keys (Use test/sandbox keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# V0 API Configuration (Development)
V0_API_KEY=your_v0_api_key_here
V0_PROJECT_ID=your_v0_project_id_here
V0_BASE_URL=https://api.v0.dev/api
V0_WS_URL=wss://api.v0.dev/ws
V0_ENABLE_PREVIEW=true
V0_AUTO_DEPLOY=false

# Local file storage (development)
USE_LOCAL_STORAGE=true
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=test@localhost
SMTP_PASSWORD=test
EMAIL_BACKEND=console

# Frontend URLs
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Performance (Development)
WORKERS=1
RELOAD=true

# Application Version
VITE_APP_VERSION=dev
VITE_API_URL=http://127.0.0.1:5000
VITE_WS_URL=ws://127.0.0.1:5000

# Development Features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_CORS=true
ENABLE_MOCK_AI=false

# Rate Limiting (Relaxed for development)
RATE_LIMIT_PER_MINUTE=1000
AUTH_RATE_LIMIT_PER_MINUTE=60

# File Upload (Development)
ALLOWED_FILE_TYPES=pdf,docx,doc,txt,md
TEMP_DIR=./temp

# Vector Database (Development)
USE_VECTOR_DB=false
VECTOR_DB_URL=http://localhost:6333

# Logging (Development)
LOG_TO_FILE=false
LOG_TO_CONSOLE=true

# Cache Settings (Development)
CACHE_TTL_SECONDS=60
DISABLE_CACHE=false

# WebSocket Settings (Development)
WS_HEARTBEAT_INTERVAL=10
WS_DEBUG=true

# AI Model Settings (Development)
DEFAULT_TEMPERATURE=0.9
MAX_TOKENS=1000
USE_MOCK_RESPONSES=false

# Development Database
DB_ECHO=true
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Development Features
ENABLE_PLAYGROUND=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_PROFILING=false

# Testing
TEST_DATABASE_URL=postgresql://postgres:dev_password_123@localhost:5432/ai_language_platform_test
PYTEST_TIMEOUT=30

# Hot Reload
WATCH_FILES=true
RELOAD_DIRS=app

# Development Security (Relaxed)
REQUIRE_HTTPS=false
CSRF_PROTECTION=false
SESSION_SECURE=false