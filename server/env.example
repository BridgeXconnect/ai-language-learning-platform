# =============================================================================
# AI Language Learning Platform - Environment Configuration
# =============================================================================

# Application Configuration
APP_NAME="Dynamic English Course Creator"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT="production"  # Options: development, staging, production

# =============================================================================
# Database Configuration
# =============================================================================

# Development (SQLite)
# DATABASE_URL="sqlite:///./data/production.db"

# Production (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/ai_language_platform"

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Database SSL Configuration (for production)
# Options: require, verify-ca, verify-full
DB_SSL_MODE="require"
DB_SSL_CERT=""
DB_SSL_KEY=""
DB_SSL_CA=""

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
API_KEY_HEADER="X-API-Key"
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL="redis://localhost:6379/0"

# =============================================================================
# AWS Configuration (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""

# =============================================================================
# AI/LLM Configuration (Optional)
# =============================================================================
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# =============================================================================
# Production Notes:
# =============================================================================
# 1. Change JWT_SECRET_KEY to a strong, unique value
# 2. Set ENVIRONMENT to "production"
# 3. Configure proper CORS_ORIGINS for your domain
# 4. Use PostgreSQL in production (not SQLite)
# 5. Enable SSL for database connections
# 6. Set DEBUG=False in production
# 7. Use environment variables for sensitive data
# 8. Consider using a secrets management service 